@model AspDotNetPlayground.Models.Item
@{
    ViewBag.Title = "Details";
}

<div class="row">

    <div class="col-md-4">
        <img src="~/img/@Model.Picture" style="width:300px; height:auto;"/>
    </div>

    <div class="col-md-8">
        <h2 class="page-header"><strong>@Model.ItemName</strong></h2>
        
            <p>
                @Model.Description

            </p>

            <p>
                @Model.Price $
            </p>

    </div>
</div>



