@using AspDotNetPlayground.Models;
@model ItemAndCategory
@{
    ViewBag.Title = "Index";
}

@section Category 
    {
    @Html.Action("CategoryMenu", "Category")
    }

<h2>Items</h2>
<hr />
<div class="col-md-12">
    <div class="alert alert-success" role="alert">
        <strong>@Model.ItemCount</strong> items listed.
    </div>
</div>

        @foreach (var item in Model.Items)
        {
            
                <div class="col-sm-8 col-md-4">
                    <div class="thumbnail">
                        <img src="https://placehold.co/350x150" alt="...">
                        <div class="caption">
                            <h3>@item.ItemName</h3>
                            <p>
                                @if (item.Description.Length > 20)
                                {
                                    @(item.Description.Substring(0, 17) + "...")
                                }
                                else
                                {
                                    @item.Description
                                }
                            </p>
                            <p><a href="/Item/Details/?id=@item.ItemId" class="btn btn-primary" role="button">Button</a> </p>
                        </div>
                    </div>
                </div>
            

        }



